{
  "openapi": "3.0.3",
  "info": {
    "title": "Segment Management API",
    "version": "1.0.0"
  },
  "paths": {
    "/v1/users": {
      "get": {
        "summary": "Get active segments of a user",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "description": "ID of the user",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "segments": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "format": "int64",
                            "description": "Segment ID"
                          },
                          "name": {
                            "type": "string",
                            "description": "Segment slug"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestResponse"
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Add or remove segments for a user",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "addSegments": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "description": "Segment slug to add"
                    }
                  },
                  "removeSegments": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "description": "Segment slug to remove"
                    }
                  },
                  "userId": {
                    "type": "string",
                    "description": "ID of the user"
                  }
                },
                "required": [
                  "userId"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "success"
          },
          "400": {
            "description": "bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/segments": {
      "post": {
        "summary": "Create a segment",
        "tags": [
          "Segments"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "slug": {
                    "type": "string",
                    "description": "Name of the segment"
                  }
                },
                "required": [
                  "slug"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "success"
          },
          "400": {
            "description": "bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete a segment",
        "tags": [
          "Segments"
        ],
        "parameters": [
          {
            "name": "slug",
            "in": "query",
            "required": true,
            "description": "Name of the segment to delete",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "success"
          },
          "400": {
            "description": "bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BadRequestResponse": {
        "type": "object"
      }
    }
  }
}
